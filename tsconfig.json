{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": false,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "assets", "src/types"],
  "exclude": ["./dist", "/node_modules/"]
}